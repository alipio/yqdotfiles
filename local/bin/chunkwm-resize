#!/usr/bin/env bash

function resize
{
    while [[ "$1" ]]; do
        /usr/local/bin/yabai -m window --resize "$2":"$1"
        shift; shift
    done
}

function main
{
    case "${1:0:1}" in
        "l") resize "-5:0" "left" "-5:0" "right" ;;
        "r") resize "5:0" "left" "5:0" "right" ;;
        "d") resize "0:5" "top" "0:5" "bottom" ;;
        "u") resize "0:-5" "top" "0:-5" "bottom" ;;
    esac
}

main "$@"
